  <% @posts.each do |post| %>
    <div class="container">
      <div>
        <h2><%= post.title %></h2>
      </div>
      <div>
        <div>
          <h4 class="text-muted text-left"><%=  post.subtitle %></h4>
        </div>
        <div class="row">
          <div class="col-md-6 text-left">
            <p class="text-muted"> Written by: 	&nbsp;	<%=  post.user.username %></p>
          </div>
          <div class="col md-6 text-right">
            <p class="text-muted">At:&nbsp; <%=  post.created_at %></p>
          </div>
        </div>
      </div>
      <div>
        <%= link_to 'Читати', post, class: "btn btn-primary" %>
        <% if current_user && current_user.admin %>
          <%= link_to 'Редагувати', edit_post_path(post), class: "btn btn-secondary" %>
          <%= link_to 'Видалити', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        <%end %>
      </div>
    </div>
  <hr>
<%end %>
