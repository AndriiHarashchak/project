<%- if controller_name != 'sessions' %>
  <p class="text-center w-100"><br /><%= link_to "Ввійти", new_session_path(resource_name), class: "bnt text-center "%><br /></p>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="text-center w-100"> немає акаунту?  <%= link_to "Реєстрація", new_registration_path(resource_name), class: "text-center w-100" %><br /></p>

<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="text-center w-100"><%= link_to "Забули пароль?", new_password_path(resource_name), class: "text-center w-100" %><br /></p>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <p class="text-center w-100"><%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-center w-100" %><br /></p>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-center w-100" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider)%><br />
  <% end %>
<% end %>